@model IEnumerable<CosmeticShopAPI.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameCa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionCa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionCa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategory">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategory">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategory">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
